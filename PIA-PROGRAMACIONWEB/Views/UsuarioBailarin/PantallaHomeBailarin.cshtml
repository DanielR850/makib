@{
    ViewData["Title"] = "Home Bailarín";
}

@section Styles {
    <link rel="stylesheet" href="/css/CSSUsuarioBailarin/PantallaHomeBailarines.css" />
}

<div class="background-image">
    <img src="/Img/UsuarioBailarin/ImagenFondoPaginaHome.jpg" alt="Fondo Ballet" class="background-img">
</div>

<div class="overlay-container">
    <!-- Header -->
    <header class="header">
        <div class="logo-container">
            <img src="/Img/UsuarioBailarin/Logo.png" alt="Logo Ballet Alianza Folklórica" class="logo">
        </div>
        <div class="title-container">
            <span class="title-box">Bailarín</span>
        </div>
        <div class="user-container">
            <span class="user-box">Nombre del Usuario</span>
        </div>
    </header>

    <!-- Navbar -->
    <nav class="navbar">
        <ul class="nav-list">
            <li class="nav-item"><a asp-action="PantallaAsistenciaEnsayos" asp-controller="UsuarioBailarin" class="nav-link">Asistencia a ensayos</a></li>
            <li class="nav-item"><a asp-action="PantallaAsistenciaEventos" asp-controller="UsuarioBailarin" class="nav-link">Asistencia a eventos</a></li>
            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle">Historial</a>
                <ul class="dropdown-menu">
                    <li><a asp-action="PantallaHistorialEnsayos" asp-controller="UsuarioBailarin" class="dropdown-link">Historial de ensayos</a></li>
                    <li><a asp-action="PantallaHistorialEventos" asp-controller="UsuarioBailarin" class="dropdown-link">Historial de eventos</a></li>
                </ul>
            </li>
        </ul>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-text">
            <h2>Se agrega una frase icónica del ballet</h2>
        </div>
    </section>
</div>
<div class="red-line"></div>

<!-- Footer -->
<footer class="footer">
    <section class="carousel">
        <div class="carousel-header">
        </div>
        <button class="carousel-arrow left">‹</button>
        <div class="carousel-images">
            <img src="/Img/UsuarioBailarin/gallery1.jpg" alt="Imagen 1">
            <img src="/Img/UsuarioBailarin/gallery2.jpg" alt="Imagen 2">
            <img src="/Img/UsuarioBailarin/gallery3.jpg" alt="Imagen 3">
        </div>
        <button class="carousel-arrow right">›</button>
        <div class="footer-toggle">
            <span>Contáctanos</span>
            <button class="toggle-button">⬆</button>
        </div>
    </section>
    <div class="footer-content">
        <div class="social-icons">
            <a href="#"><img src="/Img/TikTokIcon.png" alt="TikTok"></a>
            <span>XXXXXX</span>
            <a href="#"><img src="/Img/WhatsAppIcon.png" alt="WhatsApp"></a>
            <span>XXXXXX</span>
            <a href="#"><img src="/Img/FacebookIcon.png" alt="Facebook"></a>
            <span>XXXXXX</span>
            <a href="#"><img src="/Img/InstagramIcon.png" alt="Instagram"></a>
            <span>XXXXXX</span>
        </div>
    </div>
</footer>

