@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/CSSUsuarioNoRegistrado/Home.css" />
    <link rel="stylesheet" href="~/PIA_PROGRAMACIONWEB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="@Url.Content("~/css/CSSUsuarioNoRegistrado/Home.css")" />
</head>
<body>
    <header>
        <div class="header">
        <img src="~/Img/UsuarioNoRegistrado/ImgLogo.jpg" alt="LogoOF" width="150" height="150">

        <a href="../Views/Home/IniciarSesion.cshtml" class="login-button">Iniciar sesión</a>
    </div>
    </header>

    <main>
            <div class="dropdown">
        <button class="dropbtn">Acerca de nosotros</button>
        <div class="dropdown-content">
            <a asp-action="Historia" asp-controller="UsuarioNoRegistrado">Historia</a>
            <a asp-action="Mision" asp-controller="UsuarioNoRegistrado">Mision</a>
            <a asp-action="NuestroEquipo" asp-controller="UsuarioNoRegistrado">Nuestro Equipo</a>
        </div>
    </div>

    <div class="dropdown">
        <button class="dropbtn">Portafolio</button>
        <div class="dropdown-content">
            <a asp-action="EventosEstatales" asp-controller="UsuarioNoRegistrado">Eventos Estatales</a>
            <a asp-action="EventosNacionales" asp-controller="UsuarioNoRegistrado">Eventos Nacionales</a>
            <a asp-action="EventosInternacionales" asp-controller="UsuarioNoRegistrado">Eventos Internacionales</a>
        </div>
    </div>

    <div class="dropdown">
        <button class="dropbtn">Proximos Eventos</button>
        <div class="dropdown-content">
            <a asp-action="ProximosEventos" asp-controller="UsuarioNoRegistrado">Proximos Eventos</a>
        </div>
    </div>

    <div class="dropdown">
        <button class="dropbtn">Audiciones</button>
        <div class="dropdown-content">
            <a asp-action="Audiciones" asp-controller="UsuarioNoRegistrado">Audiciones</a>
        </div>
    </div>

    <h2 id="frase">
        FRASE ICONICA DEL BALLET
    </h2>

        <div class="line">
            <hr>
        </div>

    </main>

    <footer>
         <div class="container-fluid fixed-bottom p-0 custom-carousel-container">
        <div id="customCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row justify-content-center">
                        <div class="col"><img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" class="d-block custom-carousel-img" alt="..."></div>
                        <div class="col"><img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" class="d-block custom-carousel-img" alt="..."></div>
                        <div class="col"><img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" class="d-block custom-carousel-img" alt="..."></div>
                        <div class="col"><img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" class="d-block custom-carousel-img" alt="..."></div>
                        <div class="col"><img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" class="d-block custom-carousel-img" alt="..."></div>
                        <div class="col"><img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" class="d-block custom-carousel-img" alt="..."></div>
                    </div>
                </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#customCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#customCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="wide-dropdown">
        <a href="#contact" class="contact-us-button">Contáctanos</a>
        <div class="wide-dropdown-menu">
            <div class="wide-info-grid">
                <div class="info-section" id="section1">
                    <img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" alt="Imagen 1">
                    <h3>WhatsApp</h3>
                </div>
                <div class="info-section" id="section2">
                    <img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" alt="Imagen 2">
                    <h3>Instagram</h3>
                </div>
                <div class="info-section" id="section3">
                    <img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" alt="Imagen 3">
                    <h3>Facebook</h3>
                </div>
                <div class="info-section" id="section4">
                    <img src="~/Img/UsuarioNoRegistrado/Prueba.jpeg" alt="Imagen 4">
                    <h3>TikTok</h3>
                </div>
            </div>
        </div>
    </div>
    </footer>

    <script src="~/js/JsUsuarioNoRegistrado/Home.js"></script>
</body>
</html>